            {% block content %}
            
                        
            <!-- Livres Management Page -->
<div class="container my-5">
    <h2 class="text-center mb-4">Manage Livres (Books)</h2>
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Books List</h3>
        <button class="btn btn-primary" onclick="openAddLivreModal()">Add New Livre</button>
    </div>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Book Title</th>
                <th>auteur</th>
                <th>type</th>
                <th>date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example Book Row -->
            <tr>
                <td><img src="path/to/book-image.jpg" alt="Book Image" class="rounded" width="50" height="50"></td>
                <td>Sample Livre</td>
                <td>samer </td>
                <td>Sample </td>
                <td>12-1-2000 </td>
                <td>A brief description of the livre.</td>
                <td>
                    <span class="text-secondary" style="cursor: pointer;" onclick="openEditLivreModal()">
                        <i class="fas fa-pen"></i>
                    </span>
                    <span class="text-danger ms-3" style="cursor: pointer;" onclick="deleteLivre()">
                        <i class="fas fa-trash"></i>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add/Edit Livre Modal -->
<div class="modal fade" id="livreModal" tabindex="-1" aria-labelledby="livreModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="livreModalLabel">Add/Edit Livre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="livreForm">
                    <div class="mb-3">
                        <label for="livreTitle" class="form-label">Book Title</label>
                        <input type="text" class="form-control" id="livreTitle" required>
                    </div>
                    <div class="mb-3">
                        <label for="livreauteur" class="form-label">auteur</label>
                        <input type="text" class="form-control" id="livreauteur" required>
                    </div>
                    <label for="livretype" class="form-label">Type</label>
                    <select class="form-control" id="livretype" required>
                        <option value="">Select Type</option>
                        <option value="type1">Type 1</option>
                        <option value="type2">Type 2</option>
                        <option value="type3">Type 3</option>
                    </select>
                    <div class="mb-3">
                        <label for="livredate" class="form-label">date</label>
                        <input type="date" class="form-control" id="livredate" required>
                    </div>
                    <div class="mb-3">
                        <label for="livreDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="livreDescription" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="livreImage" class="form-label">Book Image</label>
                        <input type="file" class="form-control" id="livreImage" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Save Livre</button>
                </form>
            </div>
        </div>
    </div>
</div>

            
            
