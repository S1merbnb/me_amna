            {% block content %}

            <!-- Formations Management Page -->
<div class="container my-5">
    <h2 class="text-center mb-4">Manage Formations</h2>
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Formations List</h3>
        <button class="btn btn-primary" onclick="openAddFormationModal()">Add New Formation</button>
    </div>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Formation Name</th>
                <th>formateur </th>
                <th>type </th>
                <th>local </th>
                <th>date </th>
                <th>duree </th>
                <th>description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example Formation Row -->
            <tr>
                <td><img src="path/to/formation-image.jpg" alt="Formation Image" class="rounded" width="50" height="50"></td>
                <td>Sample Formation</td>
                <td>amna </td>
                <td>java </td>
                <td>ariena </td>
                <td>12-12-2001 </td>
                <td>25h </td>
                <td>A brief description of the formation.</td>
                <td>
                    <span class="text-secondary" style="cursor: pointer;" onclick="openEditFormationModal()">
                        <i class="fas fa-pen"></i>
                    </span>
                    <span class="text-danger ms-3" style="cursor: pointer;" onclick="deleteFormation()">
                        <i class="fas fa-trash"></i>
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add/Edit Formation Modal -->
<div class="modal fade" id="formationModal" tabindex="-1" aria-labelledby="formationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="formationModalLabel">Add/Edit Formation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formationForm">
                    <div class="mb-3">
                        <label for="formationName" class="form-label">Formation Name</label>
                        <input type="text" class="form-control" id="formationName" required>
                    </div>
                    <div class="mb-3">
                        <label for="formationformateur" class="form-label">Formateur Name</label>
                        <input type="text" class="form-control" id="formationformateur" required>
                    </div>
                    <label for="formationtype" class="form-label">Type</label>
                    <select class="form-control" id="formationtype" required>
                        <option value="">Select Type</option>
                        <option value="type1">Type 1</option>
                        <option value="type2">Type 2</option>
                        <option value="type3">Type 3</option>
                    </select>  
                    <div class="mb-3">
                        <label for="formationlocal" class="form-label"> local</label>
                        <input type="text" class="form-control" id="formationlocal" required>
                    </div>
                    <div class="mb-3">
                        <label for="formationdate" class="form-label">date</label>
                        <input type="datetime-local" class="form-control" id="formationdate" required>
                    </div>
                    <div class="mb-3">
                        <label for="formationduree" class="form-label">duree</label>
                        <input type="text" class="form-control" id="formationduree" required>
                    </div>
                    <div class="mb-3">
                        <label for="formationDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="formationDescription" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formationImage" class="form-label">Formation Image</label>
                        <input type="file" class="form-control" id="formationImage" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Save Formation</button>
                </form>
            </div>
        </div>
    </div>
</div>


