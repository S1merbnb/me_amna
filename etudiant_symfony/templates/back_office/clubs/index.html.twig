            {% block content %}
            <div class="container my-5">
    <h2 class="text-center mb-4">Manage Clubs</h2>
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Clubs List</h3>
        <button class="btn btn-primary" onclick="openAddClubModal()">Add New Club</button>
    </div>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Club Name</th>
                <th>president</th>
                <th>type</th>
                <th>date</th>
                <th>local</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Example Club Row -->
            <tr>
                <td><img src="path/to/club-image.jpg" alt="Club Image" class="rounded" width="50" height="50"></td>
                <td>Example Club</td>
                <td>sarra</td>
                <td>robotique</td>
                <td>12/12/2000</td>
                <td>ariana</td>
                <td>description</td>
                <td>
                    <!-- Edit Icon -->
                    <span class="text-secondary" style="cursor: pointer;" onclick="openEditClubModal()">
                        <i class="fas fa-pen"></i> <!-- Pen icon for edit -->
                    </span>
                    <!-- Delete Icon -->
                    <span class="text-danger ms-3" style="cursor: pointer;" onclick="deleteClub()">
                        <i class="fas fa-trash"></i> <!-- Trash icon for delete -->
                    </span>
                </td>
            </tr>
            <!-- Add more rows dynamically as needed -->
        </tbody>
    </table>
</div>

<!-- Add/Edit Club Modal -->
<div class="modal fade" id="clubModal" tabindex="-1" aria-labelledby="clubModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="clubModalLabel">Add/Edit Club</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="clubForm">
                    <div class="mb-3">
                        <label for="clubName" class="form-label">Club Name</label>
                        <input type="text" class="form-control" id="clubName" required>
                    </div>
                    <label for="clubtype" class="form-label">Type</label>
                    <select class="form-control" id="clubtype" required>
                        <option value="">Select Type</option>
                        <option value="type1">Type 1</option>
                        <option value="type2">Type 2</option>
                        <option value="type3">Type 3</option>
                    </select>                 
                   <div class="mb-3">
                        <label for="clublocal" class="form-label">local</label>
                        <input type="text" class="form-control" id="clublocal" required>
                    </div>   
                    <div class="mb-3">
                        <label for="clubpresident" class="form-label">president</label>
                        <input type="text" class="form-control" id="clubpresident" required>
                    </div>        
                    <div class="mb-3">
                        <label for="clubdate" class="form-label">Date</label>
                        <input type="datetime-local" class="form-control" id="clubdate" required>
                    </div>                    
                    <div class="mb-3">
                        <label for="clubDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="clubDescription" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="clubImage" class="form-label">Club Image</label>
                        <input type="file" class="form-control" id="clubImage" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Save Club</button>
                </form>
            </div>
        </div>
    </div>
</div>

